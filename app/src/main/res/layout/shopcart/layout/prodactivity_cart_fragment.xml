<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragmentname_tv"
        android:layout_width="1097dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:text="Корзина:"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/mainline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_rv"
        android:layout_width="900dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainline" />

    <ImageView
        android:id="@+id/mainline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/maincolumn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cart_rv"
        app:layout_constraintTop_toBottomOf="@+id/mainline"
        app:srcCompat="@android:color/darker_gray" />

    <ImageButton
        android:id="@+id/closefragment_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:tint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="Итог:"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/maincolumn"
        app:layout_constraintTop_toBottomOf="@+id/mainline" />

    <TextView
        android:id="@+id/totalprice_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="000 000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/order_btn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="#8BC34A"
        android:text="@string/order"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/totalprice_tv"
        app:layout_constraintTop_toBottomOf="@+id/totalprice_tv" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:text="руб."
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/totalprice_tv"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>